{
  "manifest_version": 3,
  "name": "Soop Comment Link Saver",
  "version": "1.1",
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "https://api-channel.sooplive.co.kr/*",
    "https://www.sooplive.co.kr/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://www.sooplive.co.kr/*"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["injected.js"],
      "matches": ["https://www.sooplive.co.kr/*"]
    }
  ],
  "action": {
    "default_popup": "popup.html"
  }
}
